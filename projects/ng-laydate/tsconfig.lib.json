/* Array of configurations for the TypeScript compiler. */
{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "../../out-tsc/lib",
        "declaration": true,
        "declarationMap": true,
        "inlineSources": true,
        "types": []
    },
    "angularCompilerOptions": {
        "skipTemplateCodegen": true,
        "strictMetadataEmit": true,
        "enableResourceInlining": true,
        "compilationMode": "partial"
    },
    "exclude": [
        "src/test.ts",
        "**/*.spec.ts"
    ]
}