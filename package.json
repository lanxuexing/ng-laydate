{
  "name": "ng-laydate",
  "version": "1.0.10",
  "scripts": {
    "ng": "ng",
    "start": "ng serve laydate-demo",
    "demo": "ng serve laydate-demo",
    "build:all": "npm run build:lib && npm run build:demo",
    "build:lib": "cp README* projects/ng-laydate/ && ng build ng-laydate && rm projects/ng-laydate/README*",
    "build:demo": "ng build laydate-demo --configuration production",
    "watch:lib": "ng build ng-laydate --watch --configuration development",
    "test": "ng test",
    "clean": "rm -rf dist .angular"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.2",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.0",
    "jsdom": "^27.1.0",
    "ng-packagr": "^21.0.0",
    "@angular-devkit/build-angular": "^21.0.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}